<!DOCTYPE html>
<include package="pyramid_jinja2"/>
<html lang="en">
	<head>
    {% block head %}
	<meta charset="utf-8">
	<title>ManageMyRestaurant</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link href="/static/bootstrap/docs/assets/css/bootstrap.css" rel="stylesheet">
	<link href="/static/style/index.css" rel="stylesheet"> 

	<link href="/static/bootstrap/docs/assets/css/bootstrap-responsive.css" rel="stylesheet">
	<link href="/static/bootstrap/docs/assets/css/docs.css" rel="stylesheet">

	<link href="http://ivaynberg.github.com/select2/select2-master/select2.css" rel="stylesheet">

    {% endblock head %}

    {% block script %}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
	<script src="/static/bootstrap/docs/assets/js/bootstrap.min.js"></script>
	<script src="/static/bootstrap/docs/assets/js/bootstrap-collapse.js"></script>
	<script src="http://ivaynberg.github.com/select2/select2-master/select2.js"></script>
	
	<!--
	<script src="/static/bootstrap/docs/assets/js/bootstrap-transition.js"></script>
	<script src="/static/bootstrap/docs/assets/js/bootstrap-dropdown.js"></script>
	-->
    {% endblock script %}
    </head>

    <body>
    {% block navbar %}
	<div class="navbar navbar-inverse navbar-fixed-top">
	    <div class="navbar-inner">
	        <div class="container">
	            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
	            </a>
		
                <a class="brand" href="/">ManageMyRestaurant</a>
			    <div class="nav-collapse collapse">
			        <ul class="nav">
			        	<li><a href="menu">View the Menu</a></li>
			        	<li><a href="placeOrder">Place an Order</a></li>
			    		<li><a href="orders">View Orders</a></li>
			    		<li><a href="pos">Sales</a></li>
			    		<li><a href="admin">Admin</a></li>
			    		<li><a href="about">About</a></li>
		        	</ul><!-- nav -->
		    	</div><!-- nav collapse -->
	        </div><!-- container -->
	    </div><!-- navbar-inner -->
	</div><!-- navbar navbar-fixed-top -->
    {% endblock navbar %}
	
	{% block body %}
	<div class="masthead">
	    <div class="container">
	        <h1>ManageMyRestaurant</h1>
			<p>Restaurant management made easy.  And best of all...it's free!!</p>
				
			<!--Buttons-->
			<table align="center" width="500">
		    	<tr>
		        	<td align="left"><a href="menu" class="btn btn-primary">Look at the Menu</a></td>
					<td align="right"><a href="placeOrder" class="btn btn-primary">Place an Order</a></td>
		    	</tr>

			</table>
	    </div><!-- container -->
	</div><!-- masthead -->
    {% endblock body %}
    </body>
</html>
