<!DOCTYPE html>
<html lang="en">
{% extends "index.jinja2" %}
{% block body %}
<div class="container-fluid">
  <div class="row-fluid">
    <p align="right">
      <button class="btn btn-primary btn-large" type="button" id="addTable">+</button>
    </p>
  </div>
  <div class="row-fluid">
    <div class="span2">
      <div class="tabbable tabs-left">
        <ul class="nav nav-pills nav-stacked" id="tableTabs">
        </ul>
      </div>
    </div>
    <div class="span10">
      <div class="tab-content" id="tableOrders">
      </div>
    </div>
  </div>
</div>

<script>
$(function() {
  var numTables = 4;
  var currTable = 0;
  
  $('.tabs a:last').tab('show');

  while (currTable <= numTables)
  {
    currTable++;
    $('#tableTabs').append($('<li><a href="#table' + currTable + '" data-toggle="tab">Table ' + currTable + '</a></li>'));
    $('#tableOrders').append($('<div class="tab-pane" id="table' + currTable +'"><div class="row-fluid"><div class="span4"><div class="well" id="group1"><input type="text" value="" id="item1"></input></div><button class="btn" id="submit">Submit</button></div></div></div>'));
    
    $('#table' + currTable).tab('show');
  }

  var numItems = 1;
	
  $(document)
    .on('focus', 'input:text', function()
    {
      var $this = $(this);
      if ($this.val() == "")
      {
        numItems++;
        $($this.parent().append($('<input type="text" value ="" id="item' + numItems + '"></input>')));
      }
    })
    .on('blur', 'input:text', function()
    {
      var $this = $(this);
      if ($this.val() == "")
      {
        $this.hide();
      }
    });
});
</script>
{% endblock body %}
